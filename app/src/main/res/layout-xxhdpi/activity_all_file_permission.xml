<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".AllPermissionsActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/key_folder"
            />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="Allow all permissions"
            android:textSize="22sp"
           />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:textSize="16sp"
                android:text="We need these permissions for creating files"
           />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:textSize="16sp"
                android:text="in external storage and connecting"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:textSize="16sp"
                android:text="bluetooth devices etc."
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
           android:id="@+id/llsp"
            >
            <ImageView
                android:id="@+id/cbsp"
                android:layout_width="26dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/crosscircle" />



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage Permission"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kanit_regular"
                android:textSize="18sp"
             />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:id="@+id/llnp"
            >
            <ImageView
                android:id="@+id/cbbp"
                android:layout_width="26dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/crosscircle" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth Permisssion"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kanit_regular"
                android:textSize="18sp"
               />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:id="@+id/lllp"
            >
            <ImageView
                android:id="@+id/cblp"
                android:layout_width="26dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/crosscircle" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Permission"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kanit_regular"
                android:textSize="18sp"
            />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:id="@+id/llpp"
            >
            <ImageView
                android:id="@+id/cbpp"
                android:layout_width="26dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/crosscircle" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Permission"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kanit_regular"
                android:textSize="18sp"
      />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:id="@+id/llsmsp"
            >
            <ImageView
                android:id="@+id/cbsmsp"
                android:layout_width="26dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/crosscircle" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS Permission"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kanit_regular"
                android:textSize="18sp"
              />
        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center"
           >

            <Button
                android:id="@+id/ok"
                android:layout_width="222dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_cylin_button"
                android:fontFamily="@font/kanit_medium"
                android:padding="10dp"
                android:text="Next"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="#fff"
             />

        </LinearLayout>

</LinearLayout>












</androidx.constraintlayout.widget.ConstraintLayout>