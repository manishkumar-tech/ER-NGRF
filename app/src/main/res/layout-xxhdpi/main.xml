<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

     >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:background="@drawable/ic_bgtopheader"></ImageView>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/temp"
        android:src="@drawable/company_logo_e"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:id="@+id/company_logo">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
       android:layout_toRightOf="@id/company_logo"
        android:layout_alignTop="@id/company_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="25dp"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/appName"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_title"
        android:layout_alignBottom="@id/company_logo"
        android:layout_alignStart="@id/appName"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/adamina"
        android:textColor="#fff"
        ></TextView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
               android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="130dp"
                android:visibility="visible"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp"
                    android:weightSum="3"
                    android:background="#C5E3E6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingStart="10dp"
                                android:weightSum="100">

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="80"
                                    android:gravity="center_vertical"
                                    android:text="@string/connection_status_main"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/kanit_regular"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="center"
                                    android:text="@string/colon"
                                    android:textColor="@color/label_text_color"
                                    android:textSize="14sp" />


                                <ImageView
                                    android:id="@+id/img_connection_status"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="15"
                                    android:padding="1dp"
                                    app:srcCompat="@drawable/circle_red" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingStart="10dp"
                                android:weightSum="100">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="80"
                                    android:gravity="center_vertical"
                                    android:text="@string/scan_status_main"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/kanit_regular"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="center"
                                    android:text="@string/colon"
                                    android:textColor="@color/label_text_color"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/img_scan_status"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="15"
                                    android:padding="1dp"
                                    app:srcCompat="@drawable/circle_red" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:weightSum="1">
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/animation_view"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/signal1"
                                />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="47"
                                android:gravity="center_vertical"
                                android:text="@string/datalogger_id"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/kanit_regular"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/colon"
                                android:textColor="@color/label_text_color"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_datalogger_id"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="center_vertical"
                                android:paddingStart="8dp"
                                android:text="@string/dash"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/kanit_regular"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


</RelativeLayout>




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#C5E3E6"
                        android:onClick="connection"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="17dp"
                            app:srcCompat="@drawable/ic_connection"
                            app:tint="@color/colorPrimary" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:text="System Connection"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/kanit_medium"
                           />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="setup_wizard"
                        android:orientation="vertical"
                        android:background="#C5E3E6"
                        android:weightSum="100">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="12dp"
                            app:srcCompat="@drawable/ic_setup_wizard"
                            app:tint="@color/colorPrimary" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:text="Setup Wizard"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"

                            android:fontFamily="@font/kanit_medium"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="system_information"
                        android:orientation="vertical"
                        android:background="#C5E3E6"
                        android:weightSum="100">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="12dp"
                            app:srcCompat="@drawable/ic_system_information"
                            app:tint="@color/colorPrimary" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:text="System Information"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"

                            android:fontFamily="@font/kanit_medium"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="view_data"
                        android:background="#C5E3E6"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="12dp"
                            app:srcCompat="@drawable/ic_view_data"
                            app:tint="@color/colorPrimary" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:text="View Data"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/kanit_medium"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#C5E3E6"
                        android:onClick="detail_configuration"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="12dp"
                            app:srcCompat="@drawable/ic_system_configuration"
                            app:tint="@color/colorPrimary" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:text="Detail Configuration"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/kanit_medium"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>





                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
             android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="upload_data"
                        android:orientation="vertical"
                        android:background="#C5E3E6"
                        android:weightSum="100">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="12dp"
                            app:srcCompat="@drawable/ic_upload_data"
                            app:tint="@color/colorPrimary" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:text="Upload Data"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/kanit_medium"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </LinearLayout>

</ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>