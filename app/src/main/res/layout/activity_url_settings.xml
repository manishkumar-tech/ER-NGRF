<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".URL_SettingsActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:background="@drawable/wave"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/temp"
                    android:contentDescription="@string/todo"
                    android:padding="4dp"
                    app:srcCompat="@drawable/icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="65"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="75"
                        android:fontFamily="@font/adamina"
                        android:gravity="center"
                        android:text="Setup Wizard"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center|top|start"
                        android:text="@string/version"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35"
                    android:gravity="center"
                    android:paddingEnd="20dp"

                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|bottom"
                        android:paddingStart="12dp"
                        android:text="URL Settings"
                        android:textColor="@color/label_text_color"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary">

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|bottom"
                        android:paddingStart="12dp"
                        android:text="URL"
                        android:textColor="@color/label_text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editUrl"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tv_1"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="URL"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/editUrl"
                        android:gravity="center_vertical|bottom"
                        android:paddingStart="12dp"
                        android:text="Port"
                        android:textColor="@color/label_text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editPort"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tv_2"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="Port"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/editPort"
                        android:gravity="center_vertical|bottom"
                        android:paddingStart="12dp"
                        android:text="User"
                        android:textColor="@color/label_text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editUser"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tv_3"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="User"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/editUser"
                        android:gravity="center_vertical|bottom"
                        android:paddingStart="12dp"
                        android:text="Password"
                        android:textColor="@color/label_text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editPassword_of_Url"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tv_4"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="Password"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@id/editPassword_of_Url"
                        android:gravity="center_vertical|bottom"
                        android:paddingStart="12dp"
                        android:text="Confirm Password"
                        android:textColor="@color/label_text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editTextConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tv_5"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="Confirm Password"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonCancelOnUrlSettings"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="4dp"
                            android:layout_toLeftOf="@+id/buttonSaveOnUrlSettings"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:text="Cancel"
                            android:textAllCaps="false"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/buttonSaveOnUrlSettings"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>